<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    android:backgroundTint="#FF9800"
    tools:context=".RegClientFragment">


    <EditText
        android:id="@+id/inPassword"
        android:layout_width="339dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="289dp"
        android:background="@drawable/borders"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:singleLine="true" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inEmail"
        android:layout_width="339dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="229dp"
        android:background="@drawable/borders"
        android:hint="Email"
        android:paddingLeft="10dp"
        android:singleLine="true" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inFirstName"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="216dp"
        android:background="@drawable/borders"
        android:hint="First Name"
        android:paddingLeft="10dp"
        android:singleLine="true" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inLastName"
        android:layout_width="162dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="209dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/borders"
        android:hint="Last Name"
        android:paddingLeft="10dp"
        android:singleLine="true" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inAddress"
        android:layout_width="339dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="170dp"
        android:background="@drawable/borders"
        android:hint="Address"
        android:paddingLeft="10dp"
        android:singleLine="true" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="106dp"
        android:layout_marginTop="303dp" />

    <TextView
        android:id="@+id/EnterCardDetails"
        android:layout_width="275dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="362dp"
        android:text="Credit Card Details:"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/ExpiryDate"
        android:layout_width="275dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="37dp"
        android:layout_marginTop="516dp"
        android:text="Expiry Date:"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/slash"
        android:layout_width="275dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="544dp"
        android:text="/"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inExpiryYear"
        android:layout_width="86dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="134dp"
        android:layout_marginTop="538dp"
        android:background="@drawable/borders"
        android:hint="yyyy"
        android:paddingLeft="10dp"
        android:singleLine="true" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inSecurityCode"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="251dp"
        android:layout_marginTop="538dp"
        android:background="@drawable/borders"
        android:hint="CVV"
        android:paddingLeft="10dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/Security"
        android:layout_width="168dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="251dp"
        android:layout_marginTop="516dp"
        android:layout_marginEnd="-8dp"
        android:text="Security Code:"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inExpiryMonth"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="538dp"
        android:background="@drawable/borders"
        android:hint="mm"
        android:paddingLeft="10dp"
        android:singleLine="true" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inNameOnCard"
        android:layout_width="339dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="454dp"
        android:background="@drawable/borders"
        android:hint="Name on Card"
        android:paddingLeft="10dp"
        android:singleLine="true" />

    <TextView
        android:id="@+id/RegisterAsAClient"
        android:layout_width="275dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:text="Register As a Client:"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/inRegister"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="602dp"
        android:backgroundTint="#C4FFFFFF"
        android:text="Register"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/backToLogin"
        android:layout_width="119dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="250dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="42dp"
        android:backgroundTint="#C4FFFFFF"
        android:text="Back"
        android:textColor="@color/black"
        android:textSize="10dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/inCardNumber"
        android:layout_width="339dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="396dp"
        android:background="@drawable/borders"
        android:hint="Card Number"
        android:paddingLeft="10dp"
        android:singleLine="true" />

</RelativeLayout>